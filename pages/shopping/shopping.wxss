/* pages/shopping/shopping.wxss */
.shopping{width: 100%;}
.head{width: 100%;height: 180rpx;display: table; padding: 30rpx 4%;background: #fff;}
.head .nickface{width: 120rpx;height: 120rpx; float: left;display: flex; justify-content: center; flex-direction: column;border-radius: 50%;overflow: hidden;border:solid #000 1px;}
.head .nickinfo{height: 100%;padding-left: 5%; display: flex; justify-content: center; flex-direction: column;}
.head .nickinfo .name{color: #333333;font-size: 32rpx;line-height: 50rpx;}
.head .nickinfo .integral{font-size: 30rpx;color: #888;}
.head .nickinfo .integral text{color: #39cdac;}

.shopping_list{width: 100%;background: #fff;margin-top:20rpx;position: relative;min-height: 100%;}
.shopping_list .list_head{width: 100%;line-height: 80rpx;border-bottom: 1px #eee solid;text-align: center;font-size: 32rpx;color:#333;}
.shopping_list .list_head .screen{width: 100%;border-bottom: 1px #eee solid;padding: 0 4%;line-height: 80rpx;text-align: center;font-size: 32rpx;color:#bfa78b;}
.shopping_list .list_head .screen .down{ width: 20rpx;height: 20rpx;border-width: 0 2px 2px 0 ;border-color: #bfa78b;border-style: solid;transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);margin-left: 15rpx;}
.shopping_list .screen_list{width: 100%;height: 100%;font-size: 32rpx; position: absolute;top: 85rpx;left: 0;z-index: 3; }
.shopping_list .screen_li{border-bottom: 1px #eee solid;background-color: #fff;padding: 0 4%;line-height: 80rpx;text-align: center;}

.shopping_li{width: 100%;height: 230rpx;padding: 0 2%;position: relative;overflow: hidden;border-bottom: 1px #eee solid;}
.shopping_li .shopping_img{width: 180rpx;height: 180rpx;margin:20rpx 10rpx;position: absolute;top: 0;left: 0;}
.shopping_li .shopping_img .image{width: 100%;height: 100%;display: flex; justify-content: center; flex-direction: column;}
.shopping_li .shopping_info{width: 100%;height: 180rpx;margin: 20rpx auto;padding-left: 190rpx;}
.shopping_li .shopping_info .name{height: 100rpx;color: #333333;font-size: 32rpx;line-height: 50rpx;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;overflow: hidden;}
.shopping_li .shopping_info .integral{height: 50rpx;line-height: 50rpx;font-size: 30rpx;color: #39cdac;}
.shopping_li .shopping_info .Price{line-height: 30rpx;color: #888888;font-size: 28rpx;text-decoration:line-through;}
.shopping_li .shopping_info .exchange_btn{width:90rpx; line-height: 55rpx;padding: 0 10rpx;border:#39cdac 1px solid;color: #39cdac;position: absolute;bottom: 20rpx;right: 20rpx;text-align: center;font-size: 30rpx;border-radius: 10rpx;}