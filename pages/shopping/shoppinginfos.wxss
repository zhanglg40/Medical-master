/* pages/shopping/shoppinginfos.wxss */
@import "../../plug-ins/wxParse/wxParse.wxss";
page{background-color: #fff;}
.litpic{width: 100%;}
.litpic swiper-item{display: flex; justify-content: center; flex-direction: column;}
.litpic swiper-item image{width: auto;max-width: 100%;height: 100%;object-fit: cover;}
.infos{width: 96%;margin: auto; padding:20rpx 1%;border-bottom: solid 1px #f5f5f5; position: relative;}
.infos .title{color: #333333;font-size: 32rpx;line-height: 60rpx;}
.infos .price{color: #888888;font-size: 26rpx;line-height: 40rpx;}
.infos .integral{font-size: 30rpx;line-height: 50rpx;}
.infos .integral text{font-size: 31rpx;color: #39cdac;}
.infos .integralbalance{font-size: 30rpx;line-height: 50rpx;color: #888;position: absolute;bottom: 20rpx;right: 2%;}
.infos .integralbalance text{color: #333;}

.describe{width: 96%;margin: auto;margin-bottom: 120rpx;}
.describe .d-title{font-size: 32rpx;color: #333;line-height: 80rpx;text-align: center;}
.describe .d-body{padding:3% 1%;}

.exchange{width: 100%;height: 120rpx; padding: 15rpx 11.3%;position: fixed;bottom: 0;background-color: #fff;}
.exchange-btn{background-color: #39cdac!important;}