/* about.wxss */
.about{width: 100%;background-color: #fff;margin-top: 1em;padding: 0 3% 1em;}
.main .main1-head{width: 100%;}
.main .text{width: 100%;font-size: 1.4em;text-indent: 2em;line-height: 1.8em;color: #555555;margin-top: 20rpx;}
.main .img_list{width: 100%;display:flex;justify-content:space-between;flex-wrap:wrap;margin-top: 1em;}
.main .img_list image{width: 32%;}
.main .main2-tab{width: 100%;height: 4em;display:flex;justify-content:space-between;flex-wrap:wrap;margin-top:20px;}
.main .main2-tab navigator{width: 33.3%;border-right: 1px solid #fff;box-sizing: border-box;background-color: #f7a23c;font-size: 1.4em;line-height: 3em;text-align: center;color: #fff;}
.main .main2-tab navigator.last{border-right: none;}
.main .textimg{padding-bottom: 1em;position: relative;}
.main .textimg .text{width: 90%;position: absolute;left: 5%;top: 75%;border: #bfa78b solid 2px;border-radius: 5px;background-color: #fff;padding: 1em 2%;font-size: 1.2em;}
.main .zx-btn{width: 100%;height: 6em;display:table;justify-content:space-between;flex-wrap:wrap;margin:510rpx auto 2em;}
.main .zx-btn view{width: 25%;text-align: center;display: table-cell;vertical-align: bottom;position: relative;}
.main .zx-btn view::before{content: "";width: 4em;height: 4em;position: absolute;left: 50%;margin-left: -2em;top: 0.2em;background-position: center;background-repeat: no-repeat;background-color: #2790fb;border-radius: 50%;}
.main .zx-btn view.nvfz::before{background-image: url(https://xcx.yzw0525.com/images/nvfz.svg);background-size:60%;}
.main .zx-btn view.ydyzl::before{background-image: url(https://xcx.yzw0525.com/images/ydyzl.svg);background-size: 85%;}
.main .zx-btn view.wxymz::before{background-image: url(https://xcx.yzw0525.com/images/wxymz.svg);background-size: 70%;}
.main .zx-btn view.ysbh::before{background-image: url(https://xcx.yzw0525.com/images/ysbh.svg);background-size: 50%;}

.main-hj image{margin: 30rpx auto;}